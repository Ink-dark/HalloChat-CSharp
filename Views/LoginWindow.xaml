<Window x:Class="HalloChat_CSharp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HalloChat_CSharp.Views"
        mc:Ignorable="d"
        Title="HalloChat - 登录"
        Width="650"
        Height="700"
        MinWidth="500"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#667eea" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="0,8,0,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="#f7fafc" />
            <Setter Property="Foreground" Value="#4a5568" />
            <Setter Property="BorderBrush" Value="#e2e8f0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="0,8,0,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="MaterialTextBox">
            <Setter Property="Background" Value="#f7fafc" />
            <Setter Property="BorderBrush" Value="#e2e8f0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Margin" Value="0,8,0,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid" Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- 主登录容器 -->
        <Grid Grid.Column="1" Grid.Row="1" Margin="24" Width="320">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!-- Logo 和标题 -->
            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,32">
                <TextBlock Text="HalloChat" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2d3748" />
                <TextBlock Text="安全、高效的即时通讯" FontSize="14" HorizontalAlignment="Center" Foreground="#718096" Margin="0,8,0,0" />
            </StackPanel>
            
            <!-- 错误提示 -->
            <Border Grid.Row="1" x:Name="ErrorGrid" Visibility="Collapsed" Margin="0,0,0,16" Background="#fed7d7" CornerRadius="8" Padding="16">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ErrorText" Foreground="#c53030" FontSize="14" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            
            <!-- 登录表单 -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16" Width="320">
                <TextBlock Text="服务器" FontSize="14" FontWeight="Medium" Foreground="#4a5568" Margin="0,0,0,4" />
                <ComboBox x:Name="ServerComboBox" Width="320" Margin="0,0,0,8" Background="#f7fafc" BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="8" Padding="16,12" FontSize="14" IsEnabled="{Binding ElementName=LoginButton, Path=IsEnabled}" />
                <TextBlock Text="用户名" FontSize="14" FontWeight="Medium" Foreground="#4a5568" Margin="0,8,0,4" />
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource MaterialTextBox}" Width="320" IsEnabled="{Binding ElementName=LoginButton, Path=IsEnabled}" KeyDown="LoginForm_KeyDown" />
                <TextBlock Text="密码" FontSize="14" FontWeight="Medium" Foreground="#4a5568" Margin="0,8,0,4" />
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource MaterialTextBox}" Width="320" IsEnabled="{Binding ElementName=LoginButton, Path=IsEnabled}" KeyDown="LoginForm_KeyDown" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
                    <CheckBox x:Name="RememberMeCheckBox" Content="记住我" Foreground="#4a5568" IsEnabled="{Binding ElementName=LoginButton, Path=IsEnabled}" />
                    <CheckBox x:Name="AdminModeCheckBox" Content="管理员模式" Foreground="#667eea" Margin="16,0,0,0" IsEnabled="{Binding ElementName=LoginButton, Path=IsEnabled}" />
                </StackPanel>
                <Button x:Name="LoginButton" Style="{StaticResource PrimaryButton}" Content="登录" Click="LoginButton_Click" Width="320" />
                <!-- 加载指示器 -->
                <StackPanel x:Name="LoadingStackPanel" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Background="#e2e8f0" Foreground="#667eea" BorderThickness="0" CornerRadius="2" />
                    <TextBlock Text="登录中..." FontSize="12" Foreground="#718096" HorizontalAlignment="Center" Margin="0,8,0,0" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>